<?xml version="1.0" encoding="utf-8"?>
<!-- @author Caroline Barrineau -->
<!--This screen will be where the user can insert initiative rolls  -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="UI_files.initiative_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreyWhite">

    <!-- Nav Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_menu" />

    <!--This will be the center margin guide-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <!--This will be the left margin guide-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <!--This will be the right margin guide-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!--Bottom Guideline, in prep for some sort of toolbar at the bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="50dp" />

    <!--Bottom Guideline, in prep for some sort of toolbar at the bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <!-- Title "Enter Combat Rolls" -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:text="@string/enter_combat_rolls"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_header" />


    <!-- Table Labels -->
    <!-- Character -->
    <TextView
        android:id="@+id/CharacterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Characters"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toTopOf="@id/namesLL"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_center"
        />

    <!-- Initiative Roll Number -->
    <TextView
        android:id="@+id/RollLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toTopOf="@id/namesLL"
        app:layout_constraintStart_toStartOf="@id/guideline_center"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        />

    <!-- Line divider under title -->
    <View
        android:id="@+id/topDivider"
        android:layout_width="350dp"
        android:layout_height="5dp"
        android:background="@color/darkblushPink"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/header_title" />

    <!--  -->
    <TableLayout
        android:id="@+id/combatOrderTable"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"

        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/topDivider">

        <TableRow>
            <!-- Entering in the player's dice rolls -->
            <!-- @TODO default all the inputted characters names into the TextViews  -->
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingEnd="30dp"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/roll"
                android:inputType="number"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/Name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingEnd="30dp"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/roll"
                android:inputType="number"/>
        </TableRow>
    </TableLayout>

    <!--Edit Stats Button-->
    <Button
        android:id="@+id/editStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblushPink"
        android:text="@string/edit_stats"
        android:textSize="16sp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toStartOf="@id/beginCombat"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/namesLL"
        tools:ignore="TextContrastCheck" />

    <!--Begin Button, constraint to edit stats button-->
    <Button
        android:id="@+id/beginCombat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkblushPink"
        android:padding="10dp"
        android:text="@string/combat"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_footer"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"

        app:layout_constraintStart_toEndOf="@+id/editStats"
        app:layout_constraintTop_toBottomOf="@+id/namesLL"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
<!-- citing GeeksforGeeks, StackOverflow, https://guides.codepath.com/android/Working-with-the-EditText -->
